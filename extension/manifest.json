{
  "name": "JobFlow Offer Importer",
  "description": "Capture job offers from emploi-public.ma and open them in JobFlow.",
  "version": "0.1.0",
  "manifest_version": 3,
  "action": {
    "default_popup": "popup.html",
    "default_title": "JobFlow Importer"
  },
  "permissions": ["activeTab", "storage"],
  "host_permissions": ["https://www.emploi-public.ma/*"],
  "content_scripts": [
    {
      "matches": ["https://www.emploi-public.ma/*"],
      "js": ["content.js"]
    }
  ]
}
